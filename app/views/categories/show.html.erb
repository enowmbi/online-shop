<div class="row">
  <div class="col-md-6">
    <h1 class="text-center">Category Details </h1>
    <div class="text-center">
      <p>
        <%= tag.hr %>
        <%= link_to 'Home', root_path ,class:"btn btn-outline-primary btn-sm" %> |
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-outline-primary btn-sm" %> |
        <%= link_to 'Back', categories_path, class:"btn btn-outline-primary btn-sm" %>
      </p>
    </div>
  </div>
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @category.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @category.description %>
    </p>
    <%= tag.hr %>
    <strong>Number of products in this category: </strong><span class="badge badge-pill badge-primary"><%= @category.products_count %></span>
  </div>
</div>
<%= tag.hr %>

<div class="row">
  <div class="col-md-3">
    <%= render partial: "shared/product_categories" ,locals:{categories: @categories} %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <%= render partial: "shared/product_details", locals:{category: @category} %>
    </div>
  </div>


