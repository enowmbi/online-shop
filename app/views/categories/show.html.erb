<div class="row">
  <div class="col-md-6">
    <h1 class="text-center">Category Details </h1>
    <div class="text-center">
      <p>
        <%= tag.hr %>
        <%= link_to 'Home', root_path ,class:"btn btn-outline-primary btn-sm" %> |
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-outline-primary btn-sm" %> |
        <%= link_to 'Back', categories_path, class:"btn btn-outline-primary btn-sm" %>
      </p>
    </div>
  </div>
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @category.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @category.description %>
    </p>
    <%= tag.hr %>
    <strong>Number of products in this category: </strong><span class="badge badge-pill badge-primary"><%= @category.products_count %></span>
  </div>
</div>
<%= tag.hr %>

<div class="row">
  <div class="col-md-3">
    <h3>Product Categories</h3>
    <%= link_to('All products',root_path) %>
    <% @categories.each do |category| %>
      <% if category.products_count > 0 %>
        <div>
          <%= link_to(category.name, category_path(category)) %>
        </div> 
      <% end %>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <% @category.products.each do |product| %>
        <div class="col-sm-2 text-center">
          <a href="/products/<%= product.id %>" >
            <% if product.image.attached? %>
              <div><%= image_tag(product.thumbnail,class: "img-thumbnail img-responsive",alt: "#{product.name}")%></div>
            <% end %>
          </a>
          <div class="text-center"><%= truncate(product.name,length:15) %></div>
          <div class="text-center"><%= number_to_currency(product.unit_price)   %></div>
          <div class="text-center"><%= link_to("Add to cart",add_to_cart_product_path(product),class:"btn btn-primary btn-sm") %></div>
        </div>
      <% end %>
    </div>
  </div>


