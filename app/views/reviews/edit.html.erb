<h1>Edit Review for '<i><%= @product.name %></i>' </h1>
<%= form_for([@product,@review]) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <b><%= form.label :current_rating %></b>
    <div class="review-rating" data-score="<%= form.object.rating %>"></div>
  </div>


  <div class="form-group">
    <b><%= form.label :new_rating %></b>
    <div id="rating-form">  </div>
  </div>


  <div class="form-group">
    <b><%= form.label :comment %></b>
    <%= form.text_area :comment,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>


<%= link_to 'Back', product_path(@review.product) %>

<script>
  $('#rating-form').raty({path: '/assets/',scoreName: 'review[rating]'});

  $('.review-rating').raty({
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');},
    path: '/assets/'
  });
</script>
