<p>
  <hr />
  <div class="review-rating" data-score="<%= review.rating %>"></div>
</p>
<p>
  <%= review.comment %>
</p>

<% if user_signed_in? && review.user_id == current_user.id %>
  <%= link_to 'Edit', edit_product_review_path(review.product,review), class: "btn btn-outline-success btn-sm" %>
  <%= link_to 'Delete',product_review_path(review.product,review) ,method: :delete,data: {confirm: "Are you sure you want to delete this review ?"},class: "btn btn-outline-danger btn-sm"%>
<% end %>
