<h3>Product Categories</h3>
<%= link_to('All products',root_path) %>
<% categories.each do |category| %>
  <% if category.products_count > 0 %>
    <div>
      <%= link_to(category.name, category_path(category), class:"tooltips",title: "#{category.description}",data: {toggle:"tooltip",placement:"bottom"}) %>
    </div> 
  <% end %>
<% end %>
